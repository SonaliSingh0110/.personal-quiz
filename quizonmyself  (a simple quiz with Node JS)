var readlineSync = require('readline-sync');
var score = 0;
console.log("Please type your answer in lowercase")

var questionOne = "Am I a Girl?";
var answerOne = "yes";

var userName = readlineSync.question(questionOne);
console.log('you entered ' + userName);

if(userName === answerOne){
  console.log("you are right");
  score=score+1;
  console.log("your score is "+score);

}else{
  console.log("opps! you are wrong");
  score=score-1;
  console.log("your score is "+score);
}

